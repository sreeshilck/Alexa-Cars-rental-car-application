{{!--------- stylesheet start ---------------}}
<style>
    @import url("https://fonts.googleapis.com/css2?family=Poppins:weight@100;200;300;400;500;600;700;800&display=swap");


    body {
        background-color: white;
        font-family: "Poppins", sans-serif;
        font-weight: 300;
    }

    .height {
        height: 100vh;
    }


    .search {
        position: relative;
        box-shadow: 0 0 40px rgba(51, 51, 51, .1);

    }

    .search input {

        height: 60px;
        text-indent: 25px;
        border: 2px solid #d6d4d4;


    }


    .search input:focus {

        box-shadow: none;
        border: 2px solid blue;


    }

    .search .fa-search {

        position: absolute;
        top: 20px;
        left: 16px;

    }

    .search button {

        position: absolute;
        top: 5px;
        right: 5px;
        height: 50px;
        width: 110px;
        background: blue;

    }

    .fare-bo {
        border-top: 1px solid #FC6414;
        border-bottom: 1px solid #FC6414;
    }

    .fare1 {
        width: 30%;
        background-color: white;
        text-align: center;
        color: #FC6414;
        border-radius: 10px;
    }

    .fare2 {
        width: 30%;
        background-color: white;
        text-align: center;
        color: #FC6414;
        border-radius: 10px;
    }

    .fare3 {
        width: 30%;

        background-color: white;
        text-align: center;
        color: #FC6414;
        border-radius: 10px;

    }

    .fare1:hover {
        background-color: #FC6414;
        color: white;
        cursor: pointer;

    }

    .fare2:hover {
        background-color: #FC6414;
        color: white;
        cursor: pointer;

    }

    .fare3:hover {
        background-color: #FC6414;
        color: white;
        cursor: pointer;

    }

    a {
        text-decoration: none;
        color: inherit;
    }

    a:hover {
        color: inherit;
    }
</style>

<body>




    <div class="container">
        <div class="input-container    d-flex  mx-auto  mt-5 p-5">

            {{#if searchData}}
            <div class="startDate truedata col-md-3 ps-3" style="">
                <input type="text" name="startdate" value="{{searchData.pickup-date}}" class="basicDate" placeholder="Enter the pickupdate"
                    style="width: 100%; height: 50px;border: 1px solid #FC6414;border-radius: 10px;padding:0 10px;">

            </div>
            <div class="endDate truedata col-md-3 ms-1 ps-3">
                <input type="text" name="enddate" value="{{searchData.dropoff-date}}" class="basicDate" placeholder="Enter the dropoff date"
                    style="width: 100%; height: 50px;border: 1px solid #FC6414;border-radius: 10px;padding:0 10px;">

            </div>

            {{else}}

            <div class="startDate col-md-3">
                <input type="text" class="form-control " name="startdate" class="basicDate">
            </div>
            <div class="endDate col-md-3 ms-1">
                <input type="text" class="form-control " name="enddate" class="basicDate">
            </div>

            {{/if}}
            <div class="searchbtn col-md-6 ms-1">
                <button class="btn" style="background-color: #FC6414; color: white;height: 50px;">Search</button>
            </div>



        </div>
        <div class="row mt-3  d-flex">
            {{#each forserchData}}
            <div class="col-sm-6 col-md-6 col-lg-4 mt-5">
                <div class="card " style="width: 22rem; border-radius: 15px;">
                    <div class="div card-img-top" style="background-color: #E5E5E5;border-radius: 15px 15px 0 0;">
                        <img src="/images/Cars/{{this.image}}" class="card-img-top" alt="..." style="">
                        <h5 class="card-title ms-4">{{this.modelname}}</h5>
                    </div>
                    <div class="card-body p-0">

                        <div class="div"
                            style="width: 100%; display: flex; align-items: center; justify-content: space-evenly;background-color: rgb(241, 232, 232);">
                            <img src="/images/icons8-gearbox-80.png" style="width: 28px;height: 28px;" alt="">
                            <p style="margin-top: 10px;">{{this.transmission}}</p>
                            <img src="/images/icons8-gas-station-50.png" style="width: 28px;height: 28px;" alt="">
                            <p style="margin-top: 10px;">{{this.fueltype}}</p>
                            <img src="/images/icons8-car-seat-50.png" style="width: 28px;height: 28px;" alt="">
                            <p style="margin-top: 10px;">{{this.seats}} Seats</p>
                        </div>
                        <div class="fare-box  p-2" style="width: 100%;display: flex; justify-content: space-between;">
                            <div class="fare1 p-3" style="">
                                <a
                                    href="/user/booking-summary?id={{this._id}}&fare={{this.fareplan.[0].plan1.fare}}&plan={{this.fareplan.[0].plan1.kms}}">
                                    <p style="font-weight: bold;margin: auto; colo: #FC6414;"> &#x20b9;
                                        {{this.fareplan.[0].plan1.fare}}</p>
                                    <small
                                        style="font-size: 11px;colo: #FC6414;font-weight: bold">{{this.fareplan.[0].plan1.kms}}
                                        Kms/day</small>
                                </a>
                            </div>
                            <div class="fare2 p-3" style="">
                                <a
                                    href="/user/booking-summary?id={{this._id}}&fare={{this.fareplan.[0].plan2.fare}}&plan={{this.fareplan.[0].plan2.kms}}">
                                    <p style="font-weight: bold;margin: auto;"> &#x20b9;
                                        {{this.fareplan.[0].plan2.fare}}</p>
                                    <small style="font-size: 11px;font-weight: bold">{{this.fareplan.[0].plan2.kms}}
                                        Kms/day</small>
                                </a>
                            </div>
                            <div class="fare3 p-3" style="">
                                <a
                                    href="/user/booking-summary?id={{this._id}}&fare={{this.fareplan.[0].plan3.fare}}&plan={{this.fareplan.[0].plan3.kms}}">
                                    <p style="font-weight: bold;margin: auto;"> &#x20b9;
                                        {{this.fareplan.[0].plan3.fare}}</p>
                                    <small style="font-size: 11px;font-weight: bold">{{this.fareplan.[0].plan3.kms}}
                                    </small>
                                </a>
                            </div>
                        </div>
                        <div class="div "
                            style="background-color: #FFDBDB;height: 70px ;display: flex;align-items: center;justify-content: center; border-radius: 0 0 15px 15px;">
                            <p class="card-text ms-4">Extra Kms charge @ &#x20b9; {{this.extrafare}}/Km.</p>
                            {{!-- <a href="#" class="btn mx-auto"
                                style="background-color: #FC6414;color: white;height: fit-content;">Book</a> --}}
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>









    <!-- jQuery -->
