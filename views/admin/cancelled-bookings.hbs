<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>
        .getuser {
            color: #FC6414;
        }

        .getuser:hover {
            color: #FC6414;
            text-decoration: underline;
        }
       
    </style>
</head>

<body>



    <!-- Table Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="row">
            <div class="col-6 col-md-2 mt-3 ">
                <a href="/admin/addnewcar" class="btn "
                    style="background-color:  white; color: #FC6414; border: 1px solid #FC6414;border-radius: 10px; ">Add
                    New Car</a>
            </div>
            <div class="col-6 col-md-2 mt-3 ">
                <a href="/admin/bookedcars" class="btn ms-3"
                    style="background-color:  white; color: #FC6414; border: 1px solid #FC6414;border-radius: 10px; ">Booked
                    Cars</a>
            </div>
            <div class="col-6 col-md-2  mt-3 ">
                <a href="/admin/deliveredcars" class="btn ms-md-3 mt-sm-0 "
                    style="background-color:  white; color: #FC6414; border: 1px solid #FC6414;border-radius: 10px; ">Delivered
                    Cars</a>
            </div>
            <div class="col-6 col-md-2  mt-3 ">
                <a href="/admin/returnedcars" class="btn ms-3 mt-md-0"
                    style="background-color:  white; color: #FC6414; border: 1px solid #FC6414;border-radius: 10px; ">Returned
                    Cars</a>
            </div>
            <div class="col-6 col-md-2  mt-3 ">
                <a href="/admin/cancelledbookings" class="btn ms-md-3 mt-md-0"
                    style="background-color: #FC6414; color: white;border-radius: 10px;">Cancelled</a>
            </div>
            
        </div>



{{#if cancelledData}}

        <div class="row g-4 mt-3">

            <div class="col-12">

                <div class="bg-light rounded h-100 ">

                    {{!-- <h6 class="mb-4">All Cars</h6> --}}

                    <div id="wrapper" class="pt-5">

                        <!-- Content Wrapper -->
                        <div id="content-wrapper" class="d-flex flex-column pt-3">
                            <div class="container-fluid">
                                <!-- DataTales Example -->
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3">
                                        <h6 class="m-0 font-weight-bold text-primary">Cancelled Booking Details</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-bordered" id="dataTable" width="100%"
                                                cellspacing="0">

                                                <thead>
                                                    <tr>
                                                        <th>Model Name</th>
                                                        <th>Booked Date</th>
                                                        <th>Cancelled Date</th>
                                                        <th>Booked By</th>
                                                        <th>Status</th>
                                                        <th>Options</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {{#each cancelledData}}
                                                    <tr>
                                                        <td>{{this.modelname}}</td>
                                                        <td>{{this.date}}</td>
                                                        <td>{{this.bookingCancelledDate}}</td>
                                                        <td>{{this.bookedby}}</td>
                                                        <td>{{this.Status}}</td>
                                                        <td class="text-center">
                                                            {{!-- <a href="/admin/cancelleddetails?id={{this._id}}" class="getuser">More Details</a> --}}
                                                            <a href="/admin/cancelleddetails?id={{this._id}}"><i class="bi bi-info-circle infobtn" style="color: #FC6414;font-size: 26px;"></i></a>
                                                            {{!-- <a href=""><i class="bi bi-trash" style="color: red;font-size: 26px;"></i></a> --}}
                                                        </td>

                                                    </tr>

                                                    {{/each}}
                                                </tbody>

                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- Table End -->
{{else}}
<div class="container-fluid pt-4 px-4">
        <div class="row vh-100 bg-light rounded align-items-center justify-content-center mx-0">
            <div class="col-md-6 text-center">
                <h3 style="color: #FC6414; font-weight: 600;">No Cancelled Cars</h3>
            </div>
        </div>
    </div>

{{/if}}


    <!-- Footer Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="bg-light rounded-top p-4">
            <div class="row">
                <div class="col-12 col-sm-6 text-center text-sm-start">
                    &copy; <a href="#" style="color: #FC6414;">Alexa <span style="color: black;">Cars</span></a>, All
                    Right Reserved.
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    </div>
    <!-- Content End -->


    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>
















    <!-- Template Javascript -->
    {{!--
    <script src="/javascripts/admin/admin-panel/js/main.js"></script> --}}


