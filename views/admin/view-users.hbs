<body>


    <!-- user deatails Table Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            
           
            <div class="col-12">
                <div class="bg-light rounded h-100 ">
                    {{!-- <h6 class="mb-4">Responsive Table</h6> --}}
                    <div id="wrapper" class="pt-5">

                        <!-- Content Wrapper -->
                        <div id="content-wrapper" class="d-flex flex-column pt-3">
                            <div class="container-fluid">
                                <!-- DataTales Example -->
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3">
                                        <h6 class="m-0 font-weight-bold text-primary">All User Details</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-bordered" id="dataTable" width="100%"
                                                cellspacing="0">
                                                <thead>
                                                    <tr>
                                                        <th>Name</th>
                                                        <th>Email</th>
                                                        <th>Phone Number</th>
                                                        <th>Option</th>
                                                        
                                                    </tr>
                                                </thead>
                                                
                                                <tbody>
                                                     {{#each users}}

                                                    <tr>
                                                        <td>{{this.name}}</td>
                                                        <td>{{this.email}}</td>
                                                        <td>{{this.phonenumber}}</td>
                                                        <td>
                                                        {{#if this.isBlocked}}
                                                            <a href="/admin/unblock-user?id={{this._id}}" class="btn btn-success text-white">Unblock</a>
                                                        {{else}}

                                                            <a href="" class="btn btn-danger text-white "  data-bs-toggle="modal" data-bs-target="#myModal">Block</a>
                                                           
                                                        {{/if}}
                                                         
                                                        </td>
                                                     
                                                    </tr>
                                                    {{/each}}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          
        </div>
    </div>
    <!-- user deatails Table End -->






    {{!-- modal start --}}
{{#each users}}

    <div class="modal-box">
        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
                <div class="modal-content clearfix " id="">
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">×</span></button>
                    <div class="modal-body">
                        <form action="" method="post" id="id-form">

                            <div class="form-group">
                                <p>Do you really  want to block  ?</p>
                            </div>
                            <button class="btn deletebtn" type="button"><a href="/admin/block-user?id={{this._id}}">
                                    Block</a></button>

                            <button class="btn mt-3 cancelbtn" type="button" class="close" data-bs-dismiss="modal"
                                aria-label="Close">Cancel</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
{{/each}}
    {{!-- modal end --}}



















    <!-- Footer Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="bg-light rounded-top p-4">
            <div class="row">
