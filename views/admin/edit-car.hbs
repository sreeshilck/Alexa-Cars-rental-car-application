                                    {{!-- <select name="planname3" id="floatingSelect" class="form-select"  aria-label="Floating label select example">
                                        <option selected>Select Plan</option>
                                        <option value="Plan1">Plan 1</option>
                                        <option value="Plan2">Plan 2</option>
                                        <option value="Plan3">Plan 3</option>
                                    </select> --}}
                                   <label for="floatingSelect" class="ms-2">Enter Plan Name</label> 
                                </div>
                                <div class="plan2 col-md-3 form-floating mb-3">
                                     {{#if getCarData.fareplan.[0].plan3.kms}}
                                    <input type="text"  name="kms3" class="form-control " id="floatingInput"  placeholder="Enter Kms" value="{{getCarData.fareplan.[0].plan3.kms}}">
                                    {{else}}
                                    <input type="text"  name="kms3" class="form-control " id="floatingInput"  placeholder="Enter Kms" >
                                    {{/if}}
                                     <label for="floatingSelect" class="ms-2">Enter Kms</label>
                                </div>
                                <div class="plan3 col-md-3 form-floating mb-3">
                                     {{#if getCarData.fareplan.[0].plan3.fare}}
                                    <input type="text" name="fare3" class="form-control" id="floatingInput"  placeholder="Enter Fare" value="{{getCarData.fareplan.[0].plan3.kms}}">
                                    {{else}}
                                    <input type="text" name="fare3" class="form-control" id="floatingInput"  placeholder="Enter Fare" value="">
                                    {{/if}}
                                    <label for="floatingSelect" class="ms-2">Enter Fare</label>
                                </div>
                              
                            </div>
                        </div>
                       


                            
                        <label for="" class="mb-3">Extra Kms Charge</label>
                        <div class="plan1 col-md-3 form-floating mb-3">
                            <input type="text" name="extrafare" class="form-control" id="floatingInput" placeholder="Extra fare per Km" value="{{getCarData.extrafare}}">
                            <label for="floatingSelect" class="ms-2">Extra fare per Km</label>
                        </div> 
                            
                        <div class="mb-3">
                            <input class="form-control" type="file" name="image" id="formFile" onchange="viewImage(event)">
                            <img src="/images/Cars/{{getCarData.image}}" alt="" style="width: 80px;height: 80px;" class="mb-3 mt-3" id="imgviews" >
                        </div>
                        <div class="form-floating mb-3 ">
                            <input type="number" class="form-control" id="floatingInput" name="deposit" value="{{getCarData.deposit}}"
                                placeholder="Security Deposit">
                            <label for="floatingSelect">Security Deposit</label>
                        </div>
                        <div class="mb-3 mt-4">
                            <input class="btn" style="background-color: #FC6414; color: white;" type="submit" 
                                value="Save">
                            <input class="btn" style="color: #FC6414; background-color: white;" type="button" 
                                value="Cancel">

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- Form End -->


