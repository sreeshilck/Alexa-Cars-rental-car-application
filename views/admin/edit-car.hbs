<body>

    <!-- Form Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <form action="/admin/updatecar?id={{getCarData._id}}" method="post" enctype="multipart/form-data">
                <div class="col-12 px-5">
                    <div class="bg-light rounded h-100 p-4">
                        <h6 class="mb-4">Edit Car</h6>
                        <div class="form-floating mb-3">
                            <input type="text" name="modelname" class="form-control" id="floatingInput"
                                placeholder="Car Model  Name" value="{{getCarData.modelname}}">
                            <label for="floatingSelect">Car Model Name </label>
                        </div>
                        <div class="form-floating mb-3 ">
                            <select class="form-select" name="transmission" id="floatingSelect"
                                aria-label="Floating label select example" >
                                {{#if getCarData.transmission}}
                                <option selected>{{getCarData.transmission}}</option>
                                {{else}}
                                <option selected>Transmission Type</option>
                                {{/if}}
                                <option value="Manual">Manual</option>
                                <option value="Automatic">Automatic</option>
                            </select>
                            <label for="floatingPassword">Transmission Type</label>
                        </div>
                        <div class="form-floating mb-3 ">
                            <select class="form-select" name="fueltype" id="floatingSelect"
                                aria-label="Floating label select example">
                                {{#if getCarData.fueltype}}
                                <option selected>{{getCarData.fueltype}}</option>
                                 {{else}}
                                <option selected>Fuel Type</option>
                                {{/if}}
                                <option value="Petrol">Petrol</option>
                                <option value="Diesel">Diesel</option>
                            </select>
                            <label for="floatingSelect">Fuel Type</label>
                        </div>
                        <div class="form-floating mb-3">
                            <select class="form-select" name="seats" id="floatingSelect"
                                aria-label="Floating label select example">
                                 {{#if getCarData.seats}}
                                <option selected>{{getCarData.seats}}</option>
                                {{else}}
                                <option selected>Seats</option>
                                {{/if}}
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                            </select>
                            <label for="floatingSelect">Seats</label>
                        </div>





                        
                        <div class="fare-box">
                            <div class="row "  id="row">
                                <label for="" class="mb-3">Rental Plans and Fare</label>
                                <div class="plan1 col-md-3 form-floating mb-3">
                                    {{#if getCarData.fareplan.[0].plan1.plan}}
                                    <input type="text" name="planname1" class="form-control" id="floatingInput" placeholder="Enter Plan Name" value="{{getCarData.fareplan.[0].plan1.plan}}">
                                    {{else}}
                                    <input type="text" name="planname1" class="form-control" id="floatingInput" placeholder="Enter Plan Name" value="">
                                    {{/if}}
                                    {{!-- <select name="planname1" id="floatingSelect" class="form-select"  aria-label="Floating label select example">
                                        <option selected>Select Plan</option>
                                        <option value="Plan1">Plan 1</option>
                                        <option value="Plan2">Plan 2</option>
                                        <option value="Plan3">Plan 3</option>
                                    </select> --}}
                                    <label for="floatingSelect" class="ms-2">Enter Plan Name</label>
                                    
                                </div>

                                <div class="plan2 col-md-3 form-floating mb-3">
                                     {{#if getCarData.fareplan.[0].plan1.kms}}
                                    <input type="text"  name="kms1" class="form-control " id="floatingInput"  placeholder="Enter Kms" value="{{getCarData.fareplan.[0].plan1.kms}}">
                                    {{else}}
                                    <input type="text"  name="kms1" class="form-control " id="floatingInput"  placeholder="Enter Kms" value="">
                                    {{/if}}
                                    <label for="floatingSelect" class="ms-2">Enter Kms</label>
                                </div>
                                <div class="plan3 col-md-3 form-floating mb-3">
                                     {{#if getCarData.fareplan.[0].plan1.fare}}
                                    <input type="text" name="fare1" class="form-control" id="floatingInput"  placeholder="Enter Fare" value="{{getCarData.fareplan.[0].plan1.fare}}">
                                    {{else}}
                                    <input type="text" name="fare1" class="form-control" id="floatingInput"  placeholder="Enter Fare" value="">
                                    {{/if}}
                                    <label for="floatingSelect" class="ms-2">Enter Fare</label>
                                </div>
                               
                            </div>
                        </div>
                        <div class="fare-box">
                            <div class="row "  id="row">
                                
                                <div class="plan1 col-md-3 form-floating mb-3">
                                    {{#if getCarData.fareplan.[0].plan2.plan}}
                                     <input type="text" name="planname2" class="form-control" id="floatingInput" placeholder="Enter Plan Name" value="{{getCarData.fareplan.[0].plan2.plan}}"> 
                                    {{else}}
                                    <input type="text" name="planname2" class="form-control" id="floatingInput" placeholder="Enter Plan Name" value=""> 
                                    {{/if}}
                                    {{!-- <select name="planname2" id="floatingSelect" class="form-select"  aria-label="Floating label select example">
                                        <option selected>Select Plan</option>
                                        <option value="Plan1">Plan 1</option>
                                        <option value="Plan2">Plan 2</option>
                                        <option value="Plan3">Plan 3</option>
                                    </select> --}}
                                    
                                    <label for="floatingSelect" class="ms-2">Enter Plan Name</label> 
                                </div>
                                <div class="plan2 col-md-3 form-floating mb-3">
                                     {{#if getCarData.fareplan.[0].plan2.kms}}
                                    <input type="text"  name="kms2" class="form-control " id="floatingInput"  placeholder="Enter Kms" value="{{getCarData.fareplan.[0].plan2.kms}}">
                                    {{else}}
                                    <input type="text"  name="kms2" class="form-control " id="floatingInput"  placeholder="Enter Kms" value="">
                                    {{/if}}
                                     <label for="floatingSelect" class="ms-2">Enter Kms</label>
                                </div>
                                <div class="plan3 col-md-3 form-floating mb-3">
                                     {{#if getCarData.fareplan.[0].plan2.fare}}
                                    <input type="text" name="fare2" class="form-control" id="floatingInput"  placeholder="Enter Fare" value="{{getCarData.fareplan.[0].plan2.fare}}">
                                    {{else}}
                                    <input type="text" name="fare2" class="form-control" id="floatingInput"  placeholder="Enter Fare" value="">
                                    {{/if}}
                                    <label for="floatingSelect" class="ms-2">Enter Fare</label>
                                </div>
                                
                            </div>
                        </div>
                        <div class="fare-box">
                            <div class="row "  id="row">
                                
                                <div class="plan1 col-md-3 form-floating mb-3">
                                     {{#if getCarData.fareplan.[0].plan3.plan}}
                                    <input type="text" name="planname3" class="form-control" id="floatingInput" placeholder="Enter Plan Name" value="{{getCarData.fareplan.[0].plan3.plan}}">
                                    {{else}}
                                    <input type="text" name="planname3" class="form-control" id="floatingInput" placeholder="Enter Plan Name" value="">
