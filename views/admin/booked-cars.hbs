{{#if bookedCarData}}


        <div class="row g-4 mt-3">

            <div class="col-12">

                <div class="bg-light rounded h-100 ">

                    {{!-- <h6 class="mb-4">All Cars</h6> --}}

                    <div id="wrapper" class="pt-5">

                        <!-- Content Wrapper -->
                        <div id="content-wrapper" class="d-flex flex-column pt-3">
                            <div class="container-fluid">
                                <!-- DataTales Example -->
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3">
                                        <h6 class="m-0 font-weight-bold text-primary">Booked Cars</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-bordered" id="dataTable" width="100%"
                                                cellspacing="0">

                                                <thead>

                                                    <tr>
                                                        <th>Model Name</th>
                                                        <th>Booked Date</th>
                                                        <th>Booked By</th>
                                                        <th>Status</th>
                                                        <th>Option</th>
                                                        <th>Delivered</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {{#each bookedCarData}}
                                                    <tr>
                                                        <td>{{this.modelname}}</td>
                                                        <td>{{this.date}}</td>
                                                        <td>{{this.bookedby}}</td>
                                                        <td>{{this.Status}}</td>
                                                        <td><a href="/admin/bookeddetails?id={{this._id}}"
                                                                class="getuser">More Details</a></td>

                                                        <td>
                                                            
                                                            <div class="form-check form-switch">
                                                                <input class="form-check-input px-auto" type="checkbox"
                                                                    id="flexSwitchCheckChecked"
                                                                    style="width: 45px;height: 22px;" onchange="updateDelivery('{{this._id}}')">

                                                            </div>
                                                        </td>
                                                    </tr>
                                                   
                                                    {{/each}}
                                                </tbody>

                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- Table End -->

    {{else}}
    <div class="container-fluid pt-4 px-4">
        <div class="row vh-100 bg-light rounded align-items-center justify-content-center mx-0">
            <div class="col-md-6 text-center">
                <h3 style="color: #FC6414; font-weight: 500;">No Booked Cars</h3>
            </div>
        </div>
    </div>
    
    {{/if}}






